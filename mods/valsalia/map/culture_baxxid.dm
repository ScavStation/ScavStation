/decl/background_detail/heritage/baxxid/teeth
	name =  "The Teeth"
	description = "You, along with most of your people, have rejected your primal past and have assimilated into Val Salian society. Violence, \
	and chaos in general, is something to be looked down upon, and something to be ashamed of. You were taught to value peace and cooperation between other species."
	uid = "scav_background_heritage_baxxid_teeth"
	secondary_langs = list(
		/decl/language/human/common,
		/decl/language/baxxid
	)

/decl/background_detail/heritage/baxxid/traditionalist
	name =  "Traditionalist"
	description = "You belong to a small sect of baxxid who desire a return to your roots as ambush predators and adept hunters. Peace and \
	assimilation into human society is not what was meant for your people, and it would be better to reject it all, becoming what baxxid were truly meant to be."
	uid = "scav_background_heritage_baxxid_traditionalist"
	secondary_langs = list(
		/decl/language/human/common,
		/decl/language/baxxid
	)

